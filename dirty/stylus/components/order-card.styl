.order-card
  background-color $white
  background-image url("../img/bicycle.png")
  background-repeat no-repeat
  background-position center calc(50% + 9.2em)
  background-size 100% auto
  background-origin border-box  
  color black
  padding 1% 5% 8%
  lost-center 600px;
  // lost-utility edit
  border-radius 5px
  

  +at(4)
    background-position center calc(60% + 9.2em)
    
  +at(3)
    background-position center calc(35% + 9.5em)
    
  +at(2)
    background-position center calc(7% + 9.8em)
  
  +at(1)
    background-position center calc(55% + 7em)
  

.order-table
  margin 0 auto
  margin-bottom 22%   

  td
    padding 2% 0
    
  .userName
    font-weight 900
    
  .user::before
    background-color: transparent;
    border 6px solid $light-gray
    content: "";
    opacity 0
    width: 100%;
    height: 100%;
    border-radius 50%
    position absolute
    top -12%
    left -12%
    padding 50% 
    transition all 0.5s 
      
  .user
    border-radius 50%
    width 50px
    height 50px
    border 1px solid $gray
    display block
    position relative
    margin 0 auto
    
    &:hover::before
      opacity 1
    
    > img    
      display block
      margin 25% auto 0
 
  .description
    font-size 0.8em 

  .price
    text-align right
    font-weight bold 
  
  .caption
    color $gray
    font-size 0.8em
    padding-bottom 4%