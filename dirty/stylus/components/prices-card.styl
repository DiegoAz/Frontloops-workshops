.prices-card
    background white
    lost-center 1000px    
    // margin 7% auto
    border-radius 5px
    padding 20px
    box-shadow: 0 22px 50px rgba(14,21,47, .2), 0 8px 20px rgba(14,21,47, .2);
    
    +mobile()
      height 100%
      margin 0
      border-radius 0
      box-shadow none
    
    +tablet()
      height 100%
      margin 0
      border-radius 0
      box-shadow none
    
    > .device-card
      lost-column 1/3
      padding 50px
      cursor pointer
      border-radius 5px
      height 400px     
      
      &:hover
        background $light-gray
        
      +mobile()
        lost-row 1/3
      
      +tablet()
        lost-row 1/3 
      
    > .device-card .image
      height 3.8em
      width 3.8em
      margin 0 auto 40px
      display block 

    > .device-card .device
      text-transform uppercase
      font-size 1em
      letter-spacing 0.2em
      text-align center
      font-weight 700   
       
    > .device-card .description
      color $gray
      font-size 0.68em
      text-align center
      height 25% 